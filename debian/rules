#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_configure:
	./bootstrap
	cd xorgxrdp && ./bootstrap
	#TODO: kerberos
	dh_auto_configure -v -- --disable-silent-rules \
	    --disable-dependency-tracking \
	    --enable-ipv6 \
	    --enable-neutrinordp \
	    --enable-jpeg \
	    --enable-fuse \
	    --enable-xrdpvr \
	    --enable-rfxcodec \
	    --enable-opus
	cd xorgxrdp && dh_auto_configure -v -- --disable-silent-rules \
	    --disable-dependency-tracking
	exit 1
