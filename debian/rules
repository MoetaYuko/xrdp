#!/usr/bin/make -f
# -*- makefile -*-

%:
	dh $@

override_dh_auto_configure:
	./bootstrap
	find -name Makefile.am | while read i; do sed -e 's#\(XRDP_PID_PATH.*/run\)#\1/xrdp#g' -i "$$i"; done
	./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var

override_dh_makeshlibs:
	dh_makeshlibs -a -n

install:
	dh install
	# Clean up some files
	rm debian/xrdp/etc/pam.d/xrdp-sesman
	rm debian/xrdp/etc/xrdp/xrdp.sh
	rm debian/xrdp/usr/lib/xrdp/*a
	mv debian/xrdp/etc/xrdp/rsakeys.ini debian/xrdp/usr/share/doc/xrdp
